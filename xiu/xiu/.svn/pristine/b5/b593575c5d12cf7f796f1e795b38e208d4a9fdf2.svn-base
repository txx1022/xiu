<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
<title></title>
<link rel="stylesheet" type="text/css" href="../css/reset.css"/>
<style type="text/css">
	header{height: 0.86rem; font-size: 0.35rem;  color: #fff; line-height: 0.86rem; width: 100%;　
         text-align: center;  background: #ad1b1b;    
         display: flex; align-items: center; justify-content: center;}
	header img{  position: absolute; height: 0.52rem; width: 1.04rem; right: 0.2rem;}
	header span{ margin-left: -0.2rem; }
	.left{ position: absolute; left: 0.3rem; height: 0.55rem;  width: 0.37rem; }
	
	.money,.money1{ height: 6rem; width: 6rem; background: #a90506; margin: 0.15rem; }
	.money li{ height: 1.7rem; width: 1.7rem;   float: left;}
	.money .center{ background: rgba(100,0,0,0.4); text-align: center; line-height: 1.7rem; height: 1.7rem;
	 color: #fff; font-size: 0.40rem; width: 1.7rem;}
</style>
</head>
<body>
	<header>
     <img class="left" src="../img/images/lefts.png"/>
	 <span>转盘抽奖</span>
	 <img class="shopcar" src="../img/images/exist.png"/>
 </header>
 <section>
 	<div class="money">
 		<ul>
 			<li class="money"></li>
 			<li class="money"></li>
 			<li class="money"></li>
 			<li class="money"></li>
 			<li class="money1 center">点击抽奖</li>
 			<li class="money"></li>
 			<li class="money"></li>
 			<li class="money"></li>
 			<li class="money"></li>
 		</ul>
 	</div>
 </section>
</body>
<script src="../js/jquery-2.1.0.min.js" type="text/javascript" charset="utf-8"></script>
<script src="../js/rem.js" type="text/javascript" charset="utf-8"></script>
<script src="../common/iscroll/iscroll.js" type="text/javascript" charset="utf-8"></script>
<script src="../common/iscroll/zepto.js" type="text/javascript" charset="utf-8"></script>
<script src="../common/iscroll/touch.min.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	$(function(){
//			用于判断是否在抽奖中
			var ismove = false; 
//			设置变量存放对象属性
			var choujiang = {}
			 
			$('.center').click(function(){
//				此处应该随机出现第一位的位置
				if(ismove == false){
					console.log('执行抽奖')
					var order =parseInt(Math.random()*9) 
					choujiang.timer = setInterval(function(){
						ismove = true
						$('.money').css('backgroundColor','#a90506')
						$('.money').eq(order).css('backgroundColor','#640000')
						order++
						if(order > $('.money').length - 1){
							order = 0
						}
					},200)			
				}else {
					console.log('点击抽奖无效')
					return false
				}			
	//			每次点击3秒后停止定时器	
				choujiang.timerout = setTimeout(function(){
						clearInterval(choujiang.timer)
						ismove = false
				},2000)
	
			})
			// 点击退出登录
		 
		$('.shopcar').on('click',function(){
		       localStorage.removeItem('username')
		       window.confirm('是否退出')
		       window.location.href='index.html'
	    })
		})
	
 
  
 
	
</script>
</html>

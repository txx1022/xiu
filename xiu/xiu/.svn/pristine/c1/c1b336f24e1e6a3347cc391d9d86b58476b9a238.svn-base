html,body,span,input,div{margin: 0;
          padding: 0;
          }
html {
    width: 100%;
    height: 100%;
    body {
        width: 100%;
        height: 100%;
        header {
            width: 100%;
            height: 48px;
            background: #A90506;
            position: fixed;
            top: 0;
            text-align: center;
            line-height: 48px;
            color:#FFFFFF;
            .span1 {
                float: left;
                font-size: 24px;
                margin: 14px 10px;
            }
            .loginicon {
                position: absolute;
                height: 24px;
                line-height: 24px;
                width:14%;
                border: 1px solid;
                border-radius: 5px;
                top: 12px;
                right: 10px;
                font-size: 14px;
            }
        }
        #container {
            padding-top: 48px;
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            background: #f3eff0;
            label{
                display: -webkit-box;
                width: 82%;
                height: 50px;
                margin-left: 5%;
                margin-top: 10%;
                background: #FFFFFF;
                padding: 0 4%;
                border-radius: 4px;
                span {
                    display:block;
                    width: 90px;
                    height: 50px;
                    line-height:50px;
                }
                input {
                    display: block;
                    height: 100%;
                    outline: none;
                    border: none;
                    -webkit-box-flex: 1;
                }
            }
            #rbtn {
                width: 90%;
                height: 10%;
                margin-left: 5%;
                background: #A90506;
                color: #FFFFFF;
                border:none;
                border-radius: 5px;
                margin-top: 30%;
                font-size: 26px;
                outline: none;
            }
        }
    }
}
